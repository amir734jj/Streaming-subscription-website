@using EnumsNET
@using Models.Enums
@model Models.ViewModels.Streams.AddStreamViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="col-sm-4">
    <h4>Add new Stream Subsciption</h4>
            
    @using (Html.BeginForm("", "", FormMethod.Post, new { }))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Name)
            @Html.TextBoxFor(x => x.Name, new {@class = "form-control", type = "text" })
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.Url)
            @Html.TextBoxFor(x => x.Url, new {@class = "form-control", type = "url" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.ServiceType)
            @Html.DropDownListFor(x => x.ServiceType, Enums.GetNames<ServiceTypeEnum>().Select(x => new SelectListItem {Text = x, Value = x}), new {@class = "form-control"})
        </div>

        <input class="btn btn-primary" type="submit" value="Add Stream Subscription"/>
    }
</div>