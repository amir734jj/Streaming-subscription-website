@using Models.Enums
@model Models.ViewModels.Streams.StreamsStatusViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-10">
        <h4>Stream Subsciptions</h4>
    
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Url</th>
                    <th>Service</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                </thead>
    
                <tbody>
                @foreach (var (key, value) in Model.Status)
                {
                    <tr>
                        <td> @key.Id </td>
                        <td>
                            <a href="@key.Url"> @key.Url </a>
                        </td>
                        <td> @key.ServiceType </td>
                        <td> @value </td>
                        <td>
                            <button class="btn btn-danger"> Delete </button>
                            <button class="btn btn-primary">
                                Start / Stop
                            </button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-sm-2">
        <a href="~/Stream/Add" class="btn btn-default">Add new subscription</a>
    </div>
</div>